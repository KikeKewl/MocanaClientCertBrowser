<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:id="@+id/MainLayout">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUrl" android:text="https://google.com"/>
    <WebView

            android:id="@+id/webViewMain" android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="0.63"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Open URL"
            android:id="@+id/buttonOpen"
            android:onClick="buttonOpenOnClick"/>
</LinearLayout>

